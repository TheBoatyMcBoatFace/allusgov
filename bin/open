#!/usr/bin/env python
# -*- coding: utf-8 -*-

import shlex
import subprocess
import sys


COMMANDS = {
    'linux': "open",
    'win32': "cmd /c start",
    'cygwin': "cygstart",
    'darwin': "open",
}


def run(path):
    command = COMMANDS.get(sys.platform, "open")
    args = shlex.split(command) + [path]
    subprocess.run(args, check=True)


if __name__ == '__main__':
    run(sys.argv[-1])
